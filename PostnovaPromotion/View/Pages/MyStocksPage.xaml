<Page x:Class="PostnovaPromotion.View.Pages.MyStocksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PostnovaPromotion.View.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="420" d:DesignWidth="860"
  Title="MyStocksPage">

    <Grid>
        <!--<Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            --><!-- Панель фильтров --><!--
            <Border Grid.Row="0" Background="#F5F5F5" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0 0 0 1">
                <StackPanel>
                    <TextBlock Text="Фильтры:" FontWeight="Bold" FontSize="14" Margin="0 0 0 5"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Тип акции:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <ComboBox x:Name="TypeFilterCombo" Width="150" Margin="0 0 20 0"
                              SelectionChanged="TypeFilterCombo_SelectionChanged">
                            <ComboBoxItem Tag="All">Все типы</ComboBoxItem>
                            <ComboBoxItem Tag="Promo">Промоакция</ComboBoxItem>
                            <ComboBoxItem Tag="Tasting">Дегустация</ComboBoxItem>
                            <ComboBoxItem Tag="Exhibition">Выставка</ComboBoxItem>
                            <ComboBoxItem Tag="Roadshow">Роудшоу</ComboBoxItem>
                            <ComboBoxItem Tag="Online">Онлайн-акция</ComboBoxItem>
                        </ComboBox>

                        <TextBlock Text="Место проведения:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <ComboBox x:Name="LocationFilterCombo" Width="150" Margin="0 0 20 0"
                              SelectionChanged="LocationFilterCombo_SelectionChanged"/>

                        <Button x:Name="ClearFiltersBtn" Content="Сбросить фильтры" 
                            Click="ClearFiltersBtn_Click" Background="#E3F2FD"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            --><!-- Список акций --><!--
            <ListView x:Name="CampaignsListView" Grid.Row="1" ItemsSource="{Binding FilteredCampaigns}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" Width="200" 
                                    DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Тип" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TypeString}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата начала" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StartDate, Converter={StaticResource DateConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата окончания" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding EndDate, Converter={StaticResource DateConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Место" Width="120" 
                                    DisplayMemberBinding="{Binding Location}"/>
                        <GridViewColumn Header="Статус" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="3" Padding="4 2" Background="{Binding Status, Converter={StaticResource StatusColorConverter}}">
                                        <TextBlock Text="{Binding StatusString}" HorizontalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        <Setter Property="Padding" Value="8"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            --><!-- Сообщение, если нет акций --><!--
            <TextBlock x:Name="NoDataText" Grid.Row="1" Text="Нет доступных акций" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="16" Foreground="Gray" Visibility="Collapsed"/>
        </Grid>-->
    </Grid>
</Page>
