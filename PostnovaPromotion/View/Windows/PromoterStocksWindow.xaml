<Window x:Class="PostnovaPromotion.View.Windows.PromoterStocksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostnovaPromotion.View.Windows"
        Title="Система промоутера" Height="550" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель навигации -->
        <Border Grid.Row="0" Background="#1976D2" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Система промоутера" 
                         Foreground="White" 
                         FontSize="16" 
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         Margin="0,0,20,0"/>


                <Button Name="MyActionsBtn" Content="Мои акции" Click="MyActionsBtn_Click"  Margin="0 0 10 0" Height="50" Width="100"/>
                <Button Name="AvailableActionsBtn" Content="Доступные акции" Click="AvailableActionsBtn_Click"  Margin="0 0 10 0" Height="50" Width="120"/>
                <Button Name="FinesBtn" Content="Штрафы" Click="FinesBtn_Click"  Height="50" Width="100"/>


            </StackPanel>
        </Border>

        <!-- Контентная область -->
        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="20"/>
    </Grid>
</Window>