<Window x:Class="PostnovaPromotion.View.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostnovaPromotion.View.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="550" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация в систему" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Text="ФИО:" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Right" />
        <TextBox  Name="FullnameTb" Grid.Row="1" Grid.Column="2" Width="180" HorizontalAlignment="Left" />
        <TextBlock Text="Телефон:" Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox  Name="PhoneTb" Grid.Row="3" Grid.Column="2" Width="180" HorizontalAlignment="Left" />
        <TextBlock Text="Логин(эл.почта):" Grid.Row="5"  VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox  Name="EmailTb" Grid.Row="5" Grid.Column="2" Width="180" HorizontalAlignment="Left" />
        <TextBlock Text="Пароль:" Grid.Row="7"  VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <PasswordBox  Name="PasswordPb" Grid.Row="7" Grid.Column="2" Width="180" HorizontalAlignment="Left" />
        <TextBlock Text="Повтор пароля:" Grid.Row="9"  VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <PasswordBox  Name="RepeatPasswordPb" Grid.Row="9" Grid.Column="2" Width="180" HorizontalAlignment="Left" />
        <Button Name="LoginBtn" Content="Зарегистрироваться" Width="150" Grid.Row="11" Grid.ColumnSpan="3" Click="LoginBtn_Click"/>
    </Grid>
</Window>
